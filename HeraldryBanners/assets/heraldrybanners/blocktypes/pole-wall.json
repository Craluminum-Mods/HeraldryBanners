{
    "code": "pole",
    "class": "HeraldryBanners.BlockPole",
    "entityClass": "HeraldryBanners.BEPole",
    "attributes": {
        "reinforcable": true,
        "attributeTransformCodeByType": {
            "*-wall-*": "onHeraldryPoleWallTransform",
            "*-wall2-*": "onHeraldryPoleWall2Transform"
        }
    },
    "behaviors": [
        // to handle drops properly, call HorizontalAttachable before BlockShapeTexturesFromAttributes
        { "name": "AttributeRenderingLibrary.HorizontalAttachable", "properties": { "dropBlockFace": "east" } },
        {
            "name": "AttributeRenderingLibrary.BlockShapeTexturesFromAttributes",
            "properties": {
                "name": {
                    "*": ["heraldrybanners:block-pole-{type}-{placement}-{side}", " (", "material-{wood}", ")"]
                },
                "textures": {
                    "wood-*": {
                        "white": { "base": "game:block/wood/debarked/{wood}" },
                        "aged": { "base": "game:block/wood/bark/{wood}" },
                        "oak2": { "base": "game:block/wood/debarked/{wood}" }
                    },
                    "*": {
                        "white": { "base": "game:block/wood/debarked/oak" },
                        "aged": { "base": "game:block/wood/bark/oak" },
                        "oak2": { "base": "game:block/wood/debarked/oak" }
                    }
                }
            }
        },
        { "name": "Lockable" }
    ],
    "entityBehaviors": [{ "name": "AttributeRenderingLibrary.ShapeTexturesFromAttributes" }],
    "variantgroups": [
        { "code": "type", "states": ["banner"] },
        { "code": "placement", "states": ["wall", "wall2"] },
        { "code": "side", "loadFromProperties": "abstract/horizontalorientation" }
    ],
    "creativeInventoryStacksByType": {
