                    { "type": "block", "code": "pole-{type}-{placement}-east", "attributes": { "types": { "wood": "kapok" } } },
                    { "type": "block", "code": "pole-{type}-{placement}-east", "attributes": { "types": { "wood": "baldcypress" } } },
                    { "type": "block", "code": "pole-{type}-{placement}-east", "attributes": { "types": { "wood": "larch" } } },
