                        "oak2": { "base": "game:block/wood/debarked/oak" }
                    }
                }
            }
        },
        { "name": "Unstable", "properties": { "attachedToFaces": ["up"] } },
        { "name": "Lockable" }
    ],
    "entityBehaviors": [{ "name": "AttributeRenderingLibrary.ShapeTexturesFromAttributes" }],
    "variantgroups": [
        { "code": "type", "states": ["banner"] },
        { "code": "placement", "states": ["ceiling"] },
